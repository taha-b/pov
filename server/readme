............................::::::::::USER_CRUD::::::::::............................
signup: method = post, url= /api/user/signup, body = {email, name, password} 
signin: method = post, url = /api/user/login, body = {email, password}
update: method = patch, url /api/user        , body= {id, update}

............................::::::::::POINTS-OF-INTRESTS_CRUD::::::::::............................

addPoint :method = post,  url= /api/point,              body = {trip:"string", any}                      output = added el
editPoint:method = patch, url= /api/point/category/id   body = el to updat example {title : "changed"}   output = string success 
deletePt :method = delete,url= /api/point/category/id   body = null                                      output = string success
getAll   :method = get,   url= /api/point,              body = null                                      output = [trip:[points]]

getTrips :method = get, url  = /api/point/trips         body = null                                      output = [tripnames]